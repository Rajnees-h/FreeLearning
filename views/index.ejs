<!-- Search Bar on Leaf Nav bar -->
function searchClick(){

const skill = document.getElementById('searchInputValue').value;
if(skill !== ""){
  document.getElementById('searchInputValue').value = "";
  $('#skillListItems').load('loadSkills?skill='+skill);
  }
}

function checkboxChange(type , elem){

  let id = elem.value+"-learn";

  if(!elem.checked){
    document.getElementById(id).remove();
    return;
  }

  let element = document.createElement("div");
  element.id = id;

  $(element).load("loadProfiles?skill="+elem.value+"&type="+type);
  $('#selectedSkillsProfile').prepend(element);

 
}











